<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
<field name="student.name">
<field-validator type="requiredstring">
<message>Name is required</message>
</field-validator>
</field>

<field name="student.password">
<field-validator type="requiredstring">
<message>Password is required</message>
</field-validator>
</field>

<field name="student.age">
		<field-validator type="int">
			<param name="min">20</param>
			<param name="max">70</param>
			<message>Age should be between 20 and 70</message>
		</field-validator>
	</field>
	
	<field name="student.allowance">
	<field-validator type="double">
	<param name="minInclusive">500</param>
	<message>Enter the allowance above 500</message>
	</field-validator>
	</field>
	
	<field name="student.phoneNumber">
	<field-validator type="requiredstring">
	<message>Enter the Phone Number</message>
	</field-validator>
	</field>
	
	<field name="student.phoneNumber">
	<field-validator type="long">
	<param name="minInclusive">10</param>
	<param name="max">10</param>
	<message>Number should be 10 digits</message>
	</field-validator>
	</field>
	
	<field name="student.gender">
	<field-validator type="requiredstring">
	<message>Select the gender</message>
	</field-validator>
	</field>
	
	<field name="student.courses">
	<field-validator type="requiredstring">
	<message>Select the Course</message>
	</field-validator>
	</field>
	
	<field name="student.email">
	<field-validator type="requiredstring">
	<message>Enter the Email</message>
	</field-validator>
	</field>
	
	<field name="student.email">
	<field-validator type="email">
	<message>The email address you entered is not valid</message>
	</field-validator>
	</field>
	
	<field name="student.hobbies">
	<field-validator type="requiredstring">
	<message>Select the hobbies</message>
	</field-validator>
	</field>
	
	<field name="student.city">
	<field-validator type="requiredstring">
	<message>Enter the City</message>
	</field-validator>

	</field>
</validators>